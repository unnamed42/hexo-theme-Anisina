---
layout: layout
---
<style>
<%- include _css/works.css %>
</style>

<!--样式内容-->
<div class="works-container" style="background-color: #fafafa">
    <!--个人展示-->
    <header>
        <div class="bg-header text-center">
            <div class="profile">
                <div class="avatar">
                    <img src="<%- theme["cdn-url"]|| '/img/'%><%= theme['sidebar-avatar']%><%- theme['cdn-url'] ? theme['clip-avatar']:""%>" >
                </div>
                <div class="personal-profile">
                    <h1>
                        <%= config.author %>
                    </h1>
                    <h2><%- __('work_collection')%></h2>
                </div>
            </div>
        </div>
    </header>
    <!--作品展示-->
    <div class="container">
        <section class="row">
            <div class="col-sm-10 col-sm-offset-1
                        col-md-8 col-md-offset-2
                      works-area">
                <% for(var obj in site.data.project){ %>
                <div class="works-item">
                    <div class="title">
                        <h3>
                            <%= site.data.project[obj].title %>
                        </h3>
                        <span class="title-date">
                            <%= site.data.project[obj].data %>
                        </span>
                    </div>
                    <!--　项目show　-->
                    <div class="works-item-img">
                        <img src="<%= site.data.project[obj].img_link %>"  >
                    </div>
                    <div>　
                        <p class="subtitle"> <%= site.data.project[obj].subTitle %> </p>
                         <span class="use">
                             <% for (var arrayVal in site.data.project[obj].use ){ %>
                             <span>
                                    <%= site.data.project[obj].use[arrayVal] %>
                                </span>
                             <% } %>
                         </span>
                        <p> <%= site.data.project[obj].direction%> </p>
                    </div>
                    <div class="footer clearfix">
                        <a class=" btn btn-default" href="<%= site.data.project[obj].link %>" target="_blank"><%- __('open_it')%></a>
                    </div>
                </div>
                <% } %>
            </div>
        </section>
    </div>
</div>
