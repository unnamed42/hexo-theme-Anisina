<!-- Post Header -->
<style type="text/css">
    <%- include _css/keynote.css %>
</style>
<header class="intro-header" >
    <iframe src="<%= page.iframe %>"/>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="post-heading">
                        <div class="tags">
                            <% page.tags.forEach(function(tag){ %>
                              <a class="tag" href="<%= config.root %><%= tag.path %>" title="<%= tag.name %>"><%= tag.name %></a>
                            <% }) %>
                        </div>

                        <h1><%= page.title %></h1>
                        <h2 class="subheading"><%= page.subtitle %></h2>
                        <span class="meta">
                            Posted by <%- page.author || config.author %> on
                            <%= page.date.format(config.date_format) %>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </iframe>
</header>

<!-- Post Content -->
<article>
    <div class="container">
        <div class="row">

    <!-- Post Container -->
            <div class="
                col-lg-8 col-lg-offset-2
                col-md-10 col-md-offset-1
                post-container">

                <%- page.content %>
                <hr>

                <%- partial('_partial/comment') %>
            </div>
            <!-- Sidebar Container -->
            <div class="
                col-lg-8 col-lg-offset-2
                col-md-10 col-md-offset-1
                sidebar-container">
                <!-- Featured Tags -->
                <%- partial('_widget/featured_tag.ejs') %>
                <!-- Friends Blog -->
                <%- partial('_widget/friends.ejs') %>
                <!-- Site search -->
                <%- partial('_widget/site_search.ejs') %>
            </div>
        </div>
    </div>
</article>
<%- partial('_partial/anchorjs') %>
