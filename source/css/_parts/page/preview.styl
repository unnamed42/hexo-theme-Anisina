.post-preview {
    .post-title {
        font-size: 21px;
        line-height: 1.3;
        margin-top: 30px;
        margin-bottom: 0;
        font-family: $TitleFont;
        text-shadow: 0 0 1px rgba(0,0,0,.15);
    }
    .post-link, #first-post .post-link {
        color: #404040;
        &:hover, &:focus {
            text-decoration: none;
            outline: none;
        }
        .post-title {transition: color .3s;}
        &:hover > .post-title {color: #FC7097;}
    }
    .post-subtitle{
        font-size: 18px;
        line-height: 1.3;
        margin: 0;
        margin-bottom: 10px;
        color: rgba(0, 0, 0, .6);
        font-weight: 400;
    }
    .post-meta {
        color: #808080;
        font-family: $SerifFontFamily;
        font-size: 12px;
        margin: 0;
        padding-left: 2px;
        margin-bottom: 15px;
        a {
            text-decoration: none;
            color: #404040;
            &:hover, &:focus {
                color: #0085a1;
                text-decoration: underline;
            }
        }
        @media only screen and (min-width: 768px) {font-size: 16px;}
    }
}

.post-content-preview p {color: #757575;}
