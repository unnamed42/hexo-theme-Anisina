.title-img {
    position: absolute;
    height:0;
    width:0;
}

/*点击博文内部的目录时,跳转到指定标题*/
article .post-container {
    h1,h2,h3,h4,h5,h6 {
        margin-top:-90px;
        padding: 100px 0 0;
    }
    h2 {font-weight: 600;}
}

article blockquote footer {padding: 5px 20px 0;}

.post-container {
    a {color: #337ab7;}
    h5 + p {margin-top: 5px;}
    h6 + p {margin-top: 5px;}
    ul, ol {
        margin-bottom: 20px;
        @media screen and (max-width: 768px) {padding-left: 30px;}
        @media screen and (max-width: 500px) {padding-left: 20px;}
        ol,ul {margin-bottom: 5px;}
    }
    li {
        p {
            margin: 0;
            margin-bottom: 5px;
        }
        h1,h2,h3,h4,h5,h6 {
            line-height: 2;
            margin-top: 20px;
        }
    }
    /* Hux make all img responsible in post-container */
    img {
        display: block;
        max-width: 100%;
        height: auto;
        margin: 1.5em auto 1.6em auto;
    }
}

.post-preview {
    > a > .post-title {
        margin-bottom: 0;
        font-family: STSong;
        text-shadow: 0 0 1px rgba(0,0,0,.15);
    }
    > .align-center {
        display: block;
        height: 100%;
        > a {
            color: #404040;
            &:hover, &:focus {
                text-decoration: none;
                outline: none;
            }
            > h2 {transition: color .3s;}
            &:hover > h2 {color: #FC7097;}
        }
        > .post-meta {
            a {
                text-decoration: none;
                color: #404040;
                &:hover, &:focus {
                    color: #0085a1;
                    text-decoration: underline;
                }
            }
        }
        > .post-title {
            @media only screen and (min-width: 768px) {
                font-size: 26px;
                line-height: 1.3;
            }
        }
    }
    > .post-title {
        font-size: 21px;
        line-height: 1.3;
        margin-top: 30px;
        margin-bottom:0;
    }
    > .post-subtitle{
        font-size: 18px;
        line-height: 1.3;
        margin: 0;
        margin-bottom: 10px;
        color: rgba(0, 0, 0, .6);
        font-weight: 400;
    }
    .post-meta {
        color: #808080;
        font-family: $SerifFontFamily;
        font-size: 12px;
        margin:0;
        padding-left: 2px;
        margin-bottom: 15px;
        @media only screen and (min-width: 768px) {font-size: 16px;}
    }
}

.post-content-preview p {color: #757575;}

.post-title-haojen{
    display: none;
}

.post-title-fixed{
    display: block;
    position: fixed;
    top:-40px;
    width: 100%;
    z-index: 6;
    text-align: center;
    white-space: nowrap;
    left:0;
    span {
        display: inline-block;
        max-width: 250px;
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
        position: relative;
        top:57px;
        @media screen and (max-width: 1049px) {
            max-width: 180px;
            font-size: 15px;
            margin-left: -160px;
        }
        @media screen and (max-width: 880px) , screen and (min-width: 770px) {display: none;}
        @media screen and (max-width: 768px) {
            max-width: 160px;
            font-size: 14px;
            margin-left: 0;
            top: 59px;
            display: inline-block;
        }
        @media screen and (max-width: 500px) {
        display: none;
        top:57px;
        }
    }
}
