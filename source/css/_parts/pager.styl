.pager {
    margin: 20px 0 0 !important;
    padding: 0 !important;
    li {
        > a, > span {
            /* Hux learn from
            *     TypeIsBeautiful,
            *     [This Post](http://zhuanlan.zhihu.com/ibuick/20186806) etc.
            */
            font-family: $MainFontFamily;
            line-height: 1.7;
            text-transform: uppercase;
            font-size: 13px;
            font-weight: 800;
            letter-spacing: 1px;
            padding: 10px;
            background-color: white;
            border-radius: 0;
            @media only screen and (min-width: 768px) {
                font-size: 14px;
                padding: 15px 25px;
            }
        }
        > a {
            color: #404040;
            &:hover, &:focus {
                color: white;
                background-color: #0085a1;
                border: 1px solid #0085a1;
            }
        }
    }
    .disabled {
        > a, > a:hover, > a:focus, > span {
            color: #808080;
            background-color: #404040;
            cursor: not-allowed;
        }
    }
}
